doctype html
head
  // Global Site Tag (gtag.js) - Google Analytics
  script(async='' src='https://www.googletagmanager.com/gtag/js?id=UA-105990489-2')
  script.
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments)};
    gtag('js', new Date());
    gtag('config', 'UA-105990489-2');
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width')
  title Daniel de Paula&apos;s CV
  link(type='text/css' rel='stylesheet' href='https://fonts.googleapis.com/css?family=Merriweather:400,400i,600,700|Montserrat:400,400i,600|Lato:400,400i,900|Open+Sans:400,400i,600,700')
  link(type='text/css' rel='stylesheet' href='font-awesome/css/font-awesome.min.css')
  link(type='text/css' rel='stylesheet' href='materialize/materialize.min.css')
  link(type='text/css' rel='stylesheet' href='stylesheets/main.css')
  script(type='text/javascript' src='js/include/jquery-3.2.1.min.js')
  script(type='text/javascript' src='materialize/materialize.min.js')
  script(type='text/javascript' src='js/include/vue.min.js')
#page
  #main-grid
    #header
      #header-title
        span {{ info.name }}
      div
        // empty div
      #header-about
        span#header-subtitle {{ info.position }}
        span.info {{ info.nationality }} | {{ getAge(info.dob) }} years old | {{ info.status }}
        span.info Available from August 2018
      #contact.icon-grid
        i.fa-icon.fa.fa-fw.fa-home(style='font-size: 1.5em')
        span {{ contact.city }} | {{ contact.country }}
        i.fa-icon.fa.fa-fw.fa-phone(style='font-size: 1.4em')
        span {{ getPhoneNumber() }}
        i.fa-icon.fa.fa-fw.fa-envelope(style='font-size: 1.15em')
        a(:href="'mailto:' + getEmail()" target='_blank') {{ getEmail() }}
    #left-col.main-col
      #jobs
        span.sec-title Experience
        .item(v-for='exp in experiences')
          .item-header
            div
              span.item-title
                b {{ exp.institution }}
              span.loc | {{ exp.city }} | {{ exp.country }}
            span.role {{ exp.role }}
          span.date
            span.period {{ exp.period }}
            template(v-if='exp.duration')  | {{ exp.duration }}
          p {{ exp.description}}
      #edu
        span.sec-title Education
        .item(v-for='edu in education')
          .item-header
            div
              span.item-title
                b {{ edu.institution }}
              span.loc | {{ edu.city }} | {{ edu.country }}
            span.role {{ edu.role }}
          span.date
            span.period {{ edu.period }}
            //
            template(v-if='edu.duration')  | {{ edu.duration }}
          p {{ edu.description}}
      #prj
        span.sec-title Projects
        .item
          .item-header
            a(target='_blank' href='https://github.com/danielpes/spark-datetime-lite')
              span.item-title
                i.fa.fa-github.lg
                b Spark DateTime Lite&nbsp;&nbsp;
            a.print-only(target='_blank' href='https://github.com/danielpes/spark-datetime-lite')
              span.print-only github.com/danielpes/spark-datetime-lite
          span.date
            b DEC 2016 - PRESENT
          p
            | A lightweight, dependency-free library for extending Spark&apos;s date and timestamp operations.
            | 100% Scala with automated tests.
      #hobbies
        span.sec-title Hobbies
        span#hob-list {{ hobbies.join(&quot; | &quot;) }}
    #right-col.main-col
      #skills
        span.sec-title Skills
        .skills-list
          template(v-for='skill in skills')
            span.skill-name {{ skill.name }}
            .skill-bar-outer
              .skill-bar-inner(:style='updateSkillBar(skill.level)')
      #langs
        span.sec-title Languages
        .skills-list
          template(v-for='lang in languages')
            span.skill-name {{ lang.name }}
            .skill-bar-outer
              .skill-bar-inner(:style='updateSkillBar(lang.level)')
      #links
        span.sec-title Online
        #links-list.icon-grid
          i.fa-icon.fa.fa-fw.fa-linkedin-square(style='font-size: 1.4em')
          a(href='http://linkedin.com/in/danieldepaula')
            span linkedin.com/in/danieldepaula
          i.fa-icon.fa.fa-fw.fa-github(style='font-size: 1.4em')
          a(href='http://github.com/danielpes')
            span github.com/danielpes
          i.fa-icon.fa.fa-fw.fa-stack-overflow(style='font-size: 1.2em')
          a(href='http://stackoverflow.com/users/3864822/')
            span stackoverflow.com/users/3864822/
      #acc
        span.sec-title Acomplishments
        #acc-content.sec-content
          p
            | Currently in the 
            b top 1%
            |  for the 
            i apache-spark
            |  tag on 
            b StackOverflow
          p
            | Currently in the 
            b top 5%
            |  for the 
            i scala
            |  and pyspark tags on 
            b StackOverflow
          p
            b Co-author
            |  of the 
            b award-winning
            |  short paper &ldquo;WebNCL: a web-based pre&shy;sentation
            |                         machine for multimedia documents&rdquo; in 2012
      #rec
        span.sec-title Recommendation
        #rec-content
          p.quote
            | &ldquo;I believe Daniel is one of the
            | most talented and enjoyable
            | persons I&apos;ve ever worked with. I
            | definitely recommend him to
            | any team&rdquo;
          .quote-author
            span
              b Fernando Moraes
            br
            span Former R&amp;D Manager at Icaro Tech
            br
            span (Full text on LinkedIn)
script(type='text/javascript' src='js/main.js')
